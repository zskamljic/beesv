{
  "manifest_version": 3,
  "name": "BeeSV",
  "description": "BSV Wallet",
  "version": "0.0.1",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "bsv.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "options_page": "options.html",
  "permissions": [
    "storage"
  ]
}